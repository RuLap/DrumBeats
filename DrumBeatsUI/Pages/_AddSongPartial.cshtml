@model DrumBeatsUI.Models.Song

<div class="modal fade" id="add-song" tabindex="-1" role="dialog" aria-labelledby="addSongLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSongLabel">Add contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                </div>
                <div class="modal-body">
                    <form asp-page-handler="AddSongPartial">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div class="form-group">
                            <label asp-for="Title" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-7">
                                <input asp-for="Title" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Duration" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-7">
                                <input asp-for="Duration" type="number" class="form-control">
                            </div>
                        </div>
                    </form>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>